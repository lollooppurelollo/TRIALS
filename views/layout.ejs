<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trials App</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Importazione di Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Importazione di Font Awesome per le icone -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <!-- Utilizzo del CSS personalizzato per le poche personalizzazioni necessarie -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100 text-gray-800 font-inter min-h-screen flex flex-col">

    <main class="container mx-auto p-4 flex-grow max-w-xl">
        <%- body %>
    </main>

    <!-- Barra di navigazione fissa e reattiva -->
    <nav class="fixed bottom-0 left-0 right-0 bg-white shadow-lg p-4 flex justify-around border-t border-gray-200 lg:hidden">
        <a href="/patient" class="flex flex-col items-center text-gray-500 hover:text-green-700 transition-colors duration-200 p-2 rounded-lg <% if (page === 'patient') { %>text-green-700 bg-gray-100<% } %>">
            <i class="fas fa-user-injured text-xl"></i>
            <span class="text-xs mt-1">Paziente</span>
        </a>
        <a href="/trial" class="flex flex-col items-center text-gray-500 hover:text-green-700 transition-colors duration-200 p-2 rounded-lg <% if (page === 'trial') { %>text-green-700 bg-gray-100<% } %>">
            <i class="fas fa-flask text-xl"></i>
            <span class="text-xs mt-1">Trial</span>
        </a>
    </nav>

    <script src="/js/client.js"></script>
</body>
</html>
