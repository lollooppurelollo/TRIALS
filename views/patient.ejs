<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRIALS APP - Paziente</title>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  </head>

  <body class="bg-gray-50 text-dark-gray min-h-screen">
    <div class="container mx-auto p-6">
      <h1 class="text-2xl font-bold mb-4 text-center">Scheda Paziente</h1>

      <form id="patientForm" class="bg-white p-6 rounded-lg shadow-md space-y-4">
        <div>
          <label for="title" class="block font-semibold">Titolo studio</label>
          <input type="text" id="title" name="title" class="w-full p-2 border border-gray-300 rounded" />
        </div>

        <div>
          <label for="subtitle" class="block font-semibold">Sottotitolo</label>
          <input type="text" id="subtitle" name="subtitle" class="w-full p-2 border border-gray-300 rounded" />
        </div>

        <div>
          <label for="setting" class="block font-semibold">Setting</label>
          <input type="text" id="setting" name="setting" class="w-full p-2 border border-gray-300 rounded" />
        </div>

        <div>
          <label for="questionnaire" class="block font-semibold">Domande (Sì/No)</label>
          <div id="questionnaire" class="space-y-2"></div>
        </div>

        <button
          type="submit"
          class="bg-sage text-white px-4 py-2 rounded hover:bg-green-700 transition-colors"
        >
          Verifica eleggibilità
        </button>
      </form>
    </div>

    <!-- MODALE CENTRATO -->
    <div id="eligibilityResult" class="fixed inset-0 flex items-center justify-center z-50 hidden bg-black bg-opacity-50">
      <div class="bg-sage p-6 rounded-lg shadow-lg max-w-md w-full">
        <p id="eligibilityText" class="font-bold text-center text-white mb-4">
          Paziente eleggibile per lo studio
        </p>
        <div class="flex justify-center">
          <button
            id="closeEligibilityBtn"
            class="bg-white text-dark-gray font-bold py-2 px-4 rounded-lg hover:bg-gray-200 transition-colors"
          >
            Chiudi
          </button>
        </div>
      </div>
    </div>

    <script>
      const eligibilityResultDiv = document.getElementById("eligibilityResult");
      const eligibilityText = document.getElementById("eligibilityText");
      const closeEligibilityBtn = document.getElementById("closeEligibilityBtn");

      // Esempio JS: mostra modale con messaggio
      function showEligibilityResult(isEligible, studyTitle) {
        eligibilityText.innerText = isEligible
          ? `Paziente eleggibile per lo studio: ${studyTitle}`
          : "Paziente non eleggibile per lo studio";
        eligibilityResultDiv.classList.remove("hidden");
      }

      closeEligibilityBtn.addEventListener("click", () => {
        eligibilityResultDiv.classList.add("hidden");
      });

      // Aggiungi qui il tuo JS per il submit del form e la logica dell'eleggibilità
    </script>
  </body>
</html>
